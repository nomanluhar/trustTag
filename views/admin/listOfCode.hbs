<h3 style="text-align: center;color:white">{{viewTitle}}</h3>
<div class="card">
    <div class="card-body">
        <div class="mb-3" style="float: right;">
            <form action="/admin/code/generator" method="GET">
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Product Id</th>
                    <th scope="col">Unique QR Code</th>
                    <th scope="col">Batch No</th>
                    <th scope="col">Mfg Date</th>
                </tr>
            </thead>
            <tbody>
                {{#each codes}}
                <tr>
                    <td>{{this.product_id}}</td>
                    <td>
                        {{#each this.codes}}
                        {{this}}
                        {{/each}}
                    </td>
                    <td>{{this.batch_no}}</td>
                    <td>{{this.mfg_date}}</td>

                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="mb-3" style="float: right;">
            <form action="/admin/master" method="GET">
                <button type="submit" class="btn btn-info">Goto Admin Desk</button>
            </form>
        </div>
    </div>
</div>