<h3 style="text-align: center;color:white">{{viewTitle}}</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/master/insert" method="POST" autocomplete="off" enctype="multipart/form-data">
            <input type="hidden" name="_id" value="{{product._id}}">
            <div class="mb-3">
                <label for="productImage" class="form-label">Product Image:</label>
                <input type="file" class="form-control" id="productImage" name="product_image" accept="image/*"
                    value="{{product.product_image}}">

            </div>
            <div class="mb-3">
                <label for="productId" class="form-label">Product Id:</label>
                <input type="text" class="form-control" id="productId" name="product_id" value="{{product.product_id}}"
                    required>
                <div class="text-danger">{{product.idError}}</div>
            </div>
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name:</label>
                <input type="text" class="form-control" id="productName" name="product_name"
                    value="{{product.product_name}}" required>
                <div class="text-danger">{{product.nameError}}</div>
            </div>
            <div class="text-danger">{{product.saveError}}</div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>